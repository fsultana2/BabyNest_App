{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",                        // Ensure this is present
    "paths": {
      "@/*": ["src/*"]                      // Ensure this is set correctly for path aliasing
    }
  },
  "include": ["src"]                         // Make sure the entire `src` folder is included
}
